<style>
  body {
    -webkit-font-smoothing: antialiased;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Soft shadow for readability */
    text-rendering: optimizeLegibility;
    font-family: 'Hepta Slab', serif;
    color: #fff;
  }

  & *::selection {
    background-color: var(--secondary-color);
    color: black;
  }

  .no-text-shadow {
    text-shadow: none;
  }

  .about-me-title {
    /* Uncomment one font at a time to experiment */
    font-weight: 830;
    //color: #fff285;
    font-family: 'bitter', serif;
    //font-family: 'Work Sans', sans-serif;
  }

  .image-container {
    position: relative;
  }

  .image-container img {
    display: block;
    width: 100%; /* Adjust according to your needs */
    height: 100%; /* Adjust according to your needs */
  }

  .image-container .horizontal-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.35),
      rgba(0, 0, 0, 0)
    );
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  .social-logos {
    fill: black;
  }

  .image-container .vertical-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3),
      rgba(0, 0, 0, 0)
    );
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  :root {
    --primary-color: #ff7340;
    --secondary-color: #f9dd82;
  }

  a {
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: underline;
  }

  .container {
    max-width: 100%;
  }

  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    object-fit: cover; /* Ensures the image covers the entire container */
    object-position: center; /* Center the image */
  }
</style>
