<style>
  body {
    -webkit-font-smoothing: antialiased;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Soft shadow for readability */
    text-rendering: optimizeLegibility;
    font-family: 'Hepta Slab', serif;
    color: #fff;
  }

  .about-me-title {
    /* Uncomment one font at a time to experiment */
    font-weight: 830;
    //color: #fff285;
    font-family: 'bitter', serif;
    //font-family: 'Work Sans', sans-serif;
  }

  .my-email {
    background-color: white;
    color: black;
    font-weight: bold;
    padding: 6px;
    text-align: center; /* Center text */
    mix-blend-mode: screen; /* This makes the cutout text possible */
    text-shadow: none;
  }

  .image-container {
    position: relative;
  }

  .image-container img {
    display: block;
    width: 100%; /* Adjust according to your needs */
    height: 100%; /* Adjust according to your needs */
  }

  .image-container .horizontal-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.35),
      rgba(0, 0, 0, 0)
    );
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  .image-container .vertical-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.25),
      rgba(0, 0, 0, 0.3)
    );
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  a.clickable-image {
    padding: 5px; /* Padding to ensure background is visible */
  }

  a.clickable-image:hover {
    background-color: rgba(
      211,
      211,
      211,
      0.3
    ); /* Light gray background with slight transparency */
    display: inline-block;
  }

  .container {
    max-width: 100%;
  }

  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    object-fit: cover; /* Ensures the image covers the entire container */
    object-position: center; /* Center the image */
  }
</style>
