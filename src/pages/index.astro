<style>
  body {
    -webkit-font-smoothing: antialiased;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); /* Soft shadow for readability */
    text-rendering: optimizeLegibility;
    color: #fff;
  }

  .about-me-body {
    font-family: 'Merriweather', serif;
    font-family: 'Hepta Slab', serif;
    font-weight: 300;
    font-weight: 400;
    //color: #fff285;
    //-webkit-text-stroke: 2px black;
    //paint-order: stroke fill;
  }

  .about-me-title {
    font-family: 'Montserrat', sans-serif;
  }

  .image-container {
    position: relative;
  }

  .image-container img {
    display: block;
    width: 100%; /* Adjust according to your needs */
    height: 100%; /* Adjust according to your needs */
  }

  .image-container .horizontal-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0));
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  .image-container .vertical-scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0)
    );
    pointer-events: none; /* Allows clicks to pass through to the image if needed */
  }

  a.clickable-image {
    padding: 5px; /* Padding to ensure background is visible */
  }

  a.clickable-image:hover {
    background-color: rgba(
      211,
      211,
      211,
      0.3
    ); /* Light gray background with slight transparency */
    display: inline-block;
  }

  .container {
    max-width: 100%;
  }

  .background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    object-fit: cover; /* Ensures the image covers the entire container */
    object-position: center; /* Center the image */
  }
</style>
